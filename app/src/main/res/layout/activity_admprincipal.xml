<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo1"
    tools:context="valdinei.domcorleone.ADMPrincipalActivity">

    <Button
        android:id="@+id/btnlogout"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="78dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark"
        android:text="sair"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnADMUsuarios"
        android:layout_width="121dp"
        android:layout_height="118dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="154dp"
        android:background="@drawable/usuario"
        android:text="Usuarios"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnProfADM"
        android:layout_width="121dp"
        android:layout_height="118dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/professor"
        android:text="Professores"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/btnADMUsuarios"
        app:layout_constraintTop_toTopOf="@+id/btnADMUsuarios" />

    <Button
        android:id="@+id/btnAlunosADM"
        android:layout_width="121dp"
        android:layout_height="118dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/alunos"
        android:text="alunos"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/btnTurmaADM"
        app:layout_constraintTop_toTopOf="@+id/btnTurmaADM" />

    <Button
        android:id="@+id/btnTurmaADM"
        android:layout_width="121dp"
        android:layout_height="118dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/turma"
        android:text="TURMA"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnADMUsuarios" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:text="Gestor Administrativo"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="57dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
