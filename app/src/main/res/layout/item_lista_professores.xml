<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtCodigoListaUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:text="Codigo" />

    <TextView
        android:id="@+id/txtNomeListaUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/txtCodigoListaUser"
        android:layout_toRightOf="@+id/txtCodigoListaUser"
        android:text="Nome" />

    <TextView
        android:id="@+id/txtTelefoneListaProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtNomeListaUser"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/txtNomeListaUser"
        android:layout_toRightOf="@+id/txtNomeListaUser"
        android:text="telefone" />

    <TextView
        android:id="@+id/txtFormacaoListaProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/txtTelefoneListaProf"
        android:layout_toRightOf="@+id/txtTelefoneListaProf"
        android:text="Professor" />

</RelativeLayout>